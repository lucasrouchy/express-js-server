<!-- views/reviews-new.handlebars -->

<form method="POST" action="/reviews">
  <fieldset>
    <legend>New Business</legend>
    <!-- TITLE -->
    <p>
      <label for="title">Name</label><br>
      <input type="text" name="name" />
    </p>
 
    <p>
      <label for="description-text">Description</label><br>
      <textarea id="description-text" name="description" rows="10" /></textarea>
    </p>

    <p>
      <label for="pictures">Picture(s)</label><br>
      <textarea id="description-text" name="picture" rows="2" /></textarea>
    </p>

    <p>
      <label for="description-text">Caption</label><br>
      <textarea id="description-text" name="Caption" rows="5" /></textarea>
    </p>


  </fieldset>

  <!-- BUTTON -->
  <p>
    <button type="submit">Save Business</button>
  </p>
  

</form>
<a href="/">Back to Home</a>